<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.SigninActivity"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/register_pb"
        android:indeterminate="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal"/>
    <TextView
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="Letâ€™s complete  creation of your Notebooks account"
        android:textStyle="bold"
        android:textSize="25sp"

       ></TextView>
    <EditText
        android:id="@+id/login_email"
        android:hint="Enter your email address"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <EditText
        android:inputType="textPassword"

        android:id="@+id/login_password"
        android:layout_marginTop="20dp"
        android:hint="Enter your password"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="By signing up you accept the Terms of
Service and Privacy Policy."
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_margin="20dp"
        ></TextView>
    <TextView
        android:id="@+id/forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Forget Password ?"
        android:textAlignment="center"
        android:textColor="#000"
        ></TextView>
    <Button
        android:layout_margin="20dp"
        android:id="@+id/login_btn"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/shape4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Sign in"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"></Button>


</LinearLayout>